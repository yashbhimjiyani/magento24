<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="adobe_training_blogs">
        <column xsi:type="int" name="id" padding="10" identity="true" nullable="false" comment="ID" />
        <column xsi:type="varchar" name="title" length="100" nullable="false" comment="Blog Title" />
        <column xsi:type="varchar" name="desc" length="100" nullable="false" comment="Blog Description" />
        <column xsi:type="int" name="status" padding="10" nullable="true" comment="Status" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>
</schema>